@model StoneShop.Models.User

<form method="post" asp-action="Create">
	<div class="border p-3">
		<div class="form-group row">
			<h2 class="text-info pl-3">Add Category</h2>
		</div>
		<div class="row">
			<div class="col-8">
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="FirstName"></label> <!--для связи с именами модели-->
					</div>
					<div class="col-8">
						<input asp-for="FirstName" class="form-control"/>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="SecondName"></label> <!--для связи с именами модели-->
					</div>
					<div class="col-8">
						<input asp-for="SecondName" class="form-control"/>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="ThirdName"></label> <!--для связи с именами модели-->
					</div>
					<div class="col-8">
						<input asp-for="ThirdName" class="form-control"/>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="Birthday"></label> <!--для связи с именами модели-->
					</div>
					<div class="col-8">
						<input asp-for="Birthday" class="form-control"/>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="Sex"></label> <!--для связи с именами модели-->
					</div>
					<div class="col-8">
						<input asp-for="Sex" class="form-control"/>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="Role"></label> <!--для связи с именами модели-->
					</div>
					<div class="col-8">
						<input asp-for="Role" class="form-control"/>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-8 offset-4 row">
						<div class="col">
                           <input type="submit" class="btn btn-info w-100" value="Create"/>
                        </div>
                        <div class="col">
							<a asp-action="Index" class="btn btn-success w-100">
								<i class="fas fa-sign-out-alt"></i>
								Back
							</a>
                        </div>
					</div>
				</div>
			</div>
			<div class="col-4">
				@* Тут что-то будет *@
			</div>
		</div>
	</div>
</form>