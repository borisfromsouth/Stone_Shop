@model IEnumerable<StoneShop.Models.User>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Users</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="User" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp;
                Add New User
            </a>
        </div>
    </div>

    <br/><br/>

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        First Name
                    </th>
                     <th>
                        Second Name
                    </th>
                    <th>
                        Third Name
                    </th>
                     <th>
                        Birthday
                    </th>
                    <th>
                        Sex
                    </th>
                    <th>
                        Role
                    </th>
                    <th></th>
                <tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width="5%">@obj.Id</td>
                        <td width="10%">@obj.FirstName</td>
                        <td width="10%">@obj.SecondName</td>
                        <td width="10%">@obj.ThirdName</td>
                        <td width="30%">@obj.Birthday</td>
                        <td width="10%">@obj.Sex</td>
                        <td width="10%">@obj.Role</td>
                        <td class ="text-center">
                            <div class="w-85 btn-group" role="group">
                                <a asp-controller="User" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="User" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No category exists.</p>
    }
</div>
