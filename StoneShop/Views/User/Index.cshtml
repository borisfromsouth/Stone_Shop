@model IEnumerable<StoneShop.Models.User>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Users</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="User" asp-action="Create" class="btn btn-primary">
                Add New User
            </a>
        </div>
    </div>

    <br/><br/>

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        First Name
                    </th>
                     <th>
                        Second Name
                    </th>
                    <th>
                        Third Name
                    </th>
                     <th>
                        Birthday
                    </th>
                    <th>
                        Sex
                    </th>
                    <th>
                        Role
                    </th>
                <tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width="10%">@obj.Id</td>
                        <td width="10%">@obj.FirstName</td>
                        <td width="10%">@obj.SecondName</td>
                        <td width="10%">@obj.ThirdName</td>
                        <td width="40%">@obj.Birthday</td>
                        <td width="10%">@obj.Sex</td>
                        <td width="10%">@obj.Role</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No category exists.</p>
    }
</div>
